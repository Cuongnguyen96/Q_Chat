<div class="box">
    <div class="content">
        <div class="social">
            <a id="google_login" class="circle google" href="/auth/google" title="Đăng nhập bằng tài khoản Google">
                <i class="fa fa-google-plus fa-fw"></i>
            </a>
            <a id="facebook_login" class="circle facebook" href="/auth/facebook"
                title="Đăng nhập bằng tài khoản Facebook">
                <i class="fa fa-facebook fa-fw"></i>
            </a>
        </div>
        <div class="division">
            <div class="line l"></div>
            <span>hoặc</span>
            <div class="line r"></div>
        </div>
        <div class="error"></div>
        <div class="form loginBox">
            <form method="POST" action="/login">
                <input type="text" name="email" placeholder="Email" class="form-control" required>
                <input type="password" name="password" placeholder="Password" class="form-control" required>
                <input type="submit" value="Đăng nhập" class="btn btn-default btn-login">
            </form>
        </div>
    </div>
</div>

<!-- include('sections/register');-->
<div class="box">
    <div class="content registerBox" style="display:none;">
        <div class="form">
            <form method="post" html="{:multipart=>true}" data-remote="true" action="/register" accept-charset="UTF-8">
                <input id="email" class="form-control" type="text" placeholder="Email" name="email" required>
                &nbsp;<label class="radio-inline"><input type="radio" name="gender" value="male" checked required>
                    Nam</label>&nbsp;
                &nbsp;<label class="radio-inline"><input type="radio" name="gender" value="female" required>
                    Nữ</label>&nbsp;
                <input id="password" class="form-control" type="password" placeholder="Password" name="password"
                    required>
                <input id="password_confirmation" class="form-control" type="password" placeholder="Repeat Password"
                    name="password_confirmation" required>
                <input class="btn btn-default btn-register" type="submit" value="Tạo tài khoản" name="commit">
            </form>
        </div>
    </div>
</div>